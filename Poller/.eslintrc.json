{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "operator-linebreak": ["error", "after"],
        "indent": ["error", "tab"],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {
        "process": true
    }
}